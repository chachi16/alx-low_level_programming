#include <stdlib.h>
#include "main.h"
/**
 *alloc_gring - allocates a memory for a 2 dimensional array
 *@width: width of the array
 *@height: height of the array
 *
 *Return: a pointer to an array
 */
int **alloc_grid(int width, int height)
{
  int i, j;
  int *grid;
  int size;
  
  i = 0;
  j = 0;
  size = width + height;
  if (width == 0 && height == 0)
    {
      return (NULL);
    }
  else
    {
      grid = malloc(sizeof(int) * size);

      if (grid == NULL)
	{
	  return (NULL);
	}
      for (i= 0; i <= height; i++)
	{
	  for  (j = 0; j <= width; j++0
	    {
	  grid[i][j] = 0;
	    }
		  
